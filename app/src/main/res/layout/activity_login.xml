<!-- This is the layout for the Login Activity. It uses LinearLayout.
 LinearLayout is a view group that aligns
 all children in a single direction, vertically or horizontally.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#bfb9c2"
    android:baselineAligned="true"
    tools:context=".LoginActivity"
    >
<!--the logo for the login page-->
    <ImageView
        android:layout_width="181dp"
        android:layout_height="106dp"
        android:src="@drawable/eks3"
        android:foregroundGravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="2dp"
        android:layout_weight="0.07" />

    <!-- allows the user to put in their email-->
    <EditText
        android:hint=" Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailField"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/abc_primary_text_material_dark"
        android:layout_weight="0.15"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#ffffff" />

    <!--allows the user to put in their password-->
    <EditText
        android:hint=" Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordField"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginTop="12dp"
        android:backgroundTintMode="screen"
        android:layout_weight="0.15"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@android:color/white"
        android:background="#ffffff" />

    <!--Button for loggin in-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginButton"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_marginTop="25dp"
        android:background="#FF5F446E"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:textSize="18dp"
        android:layout_weight="0.01" />

    <!--Button for Registering if user doesn't have an account yet-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Here!"
        android:id="@+id/regButton"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:textColor="#FF5F446E"
        android:background="#bfb9c2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="14dp" />

</LinearLayout>
